# Qdrant Web Backup - Environment Configuration
# Copy this file to .env and fill in your values

# ==================== Database ====================
# PostgreSQL connection settings
DATABASE_URL=postgresql://localhost:5432/qdrant_backup
DATABASE_USER=qdrant
DATABASE_PASSWORD=your-secure-password

# ==================== Qdrant ====================
# Qdrant cluster connection
QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_API_KEY=your-qdrant-api-key  # Uncomment if auth enabled

# ==================== Storage ====================
# Default local storage path
STORAGE_PATH=/app/data/snapshots

# S3 storage (optional)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=your-backup-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# ==================== Application ====================
# Spring profile (dev/prod)
SPRING_PROFILES_ACTIVE=prod

# Server port (internal, Nginx proxies to this)
SERVER_PORT=8081

# ==================== Security ====================
# JWT secret for API authentication (generate with: openssl rand -base64 32)
# JWT_SECRET=your-jwt-secret

# ==================== Observability ====================
# Enable metrics endpoint
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# Log level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_QDRANT_BACKUP=DEBUG